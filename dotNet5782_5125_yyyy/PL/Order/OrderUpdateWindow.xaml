<Window x:Class="PL.Order.OrderUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Order"
        mc:Ignorable="d"
        Title="OrderUpdateWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions >
        <ListView Name="OrderListView" Grid.Row="1" ItemsSource="{Binding}" HorizontalAlignment="Center" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Update Shippment" HorizontalAlignment="Left" Margin="61,177,0,0" Grid.Row="1" VerticalAlignment="Top" Click="UpdateShippment_Click"/>
        <Button Content="Update Delivery" HorizontalAlignment="Left" Margin="61,220,0,0" Grid.Row="1" VerticalAlignment="Top" Width="104" Click="UpdateDelivery_Click"/>
    </Grid>
</Window>
